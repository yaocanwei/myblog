<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
  <div class="center hero-unit">
    <h1>欢迎来到博客</h1>

    <h2>
      这是博客主页
      <a href="http://railstutorial.org/">Ruby on Rails Tutorial</a>
    </h2>

    <%= link_to "注册!", signup_path, 
                                class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("ios-icon.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %> 
